{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/users.schema.json",
    "title": "Users Post Request Schema",
    "description": "A user in database",
    "type": "object",
    "required": [
        "first_name",
        "last_name",
        "email"
    ],
    "properties": {
        "first_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "last_name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
        },
        "email": {
            "type": "string",
            "minLength": 11,
            "maxLength": 100
        }
    }
  }